@model UpdateProductRequest

@{
    ViewData["Title"] = "Update Product";
}
<style>
    body {
        background-image: url('@Url.Content("~/Files/Images/inventorybackground.png")');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    form {
        max-width: 600px;
        margin: 50px auto;
        background: rgba(255, 255, 255, 0.85);
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    }

    h2 {
        text-align: center;
        font-size: 1.75rem;
        margin-bottom: 20px;
        color: #333;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        font-size: 0.875rem;
        border-radius: 8px;
        padding: 8px;
        background-color: #f9f9f9;
        border: 1px solid #ced4da;
        transition: border-color 0.3s ease-in-out;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.25);
        }

    .form-control-file {
        font-size: 0.875rem;
        padding: 6px;
    }

    .form-group label {
        font-size: 0.875rem;
        color: #555;
        margin-bottom: 5px;
    }

    .btn {
        display: block;
        width: 100%;
        padding: 10px;
        font-size: 0.875rem;
        font-weight: 500;
        border-radius: 8px;
        transition: background-color 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            box-shadow: 0 8px 16px rgba(0, 123, 255, 0.5);
        }

    span.text-danger {
        font-size: 0.75rem;
        margin-top: 5px;
    }
</style>

<h2>Update Product</h2>

<form asp-action="UpdateProduct" asp-controller="Product" enctype="multipart/form-data" method="post">
    <input asp-for="ProductId" type="hidden" />
    <input asp-for="ApplicationUserId" type="hidden" />

    <div class="form-group">
        <label asp-for="ProductName" class="control-label"></label>
        <input asp-for="ProductName" class="form-control form-control-sm" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control form-control-sm" type="number" step="0.01" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LowStock" class="control-label"></label>
        <input asp-for="LowStock" class="form-control form-control-sm" type="number" />
        <span asp-validation-for="LowStock" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Photo" class="control-label"></label>
        <input asp-for="Photo" class="form-control form-control-sm" type="file" />
        <span asp-validation-for="Photo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SubCategoryId" class="control-label"></label>
        <select asp-for="SubCategoryId" class="form-control form-control-sm" asp-items="@(SelectList)ViewBag.SubCategories">
            <option value="">Select Subcategory</option>
        </select>
        <span asp-validation-for="SubCategoryId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SupplierId" class="control-label"></label>
        <select asp-for="SupplierId" class="form-control form-control-sm" asp-items="@(SelectList)ViewBag.Suppliers">
            <option value="">Select Supplier</option>
        </select>
        <span asp-validation-for="SupplierId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update Product</button>
</form>
