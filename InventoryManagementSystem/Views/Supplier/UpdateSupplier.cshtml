@model UpdateSupplierRequest

@{
    ViewData["Title"] = "Update Supplier";
}

<h2 class="text-center">Edit Supplier</h2>

<style>
    body {
        background-image: url('@Url.Content("~/Files/Images/inventorybackground.png")');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .form-container {
        max-width: 600px;
        margin: 50px auto;
        padding: 30px;
        background-color: rgba(255, 255, 255, 0.9);
        border-radius: 8px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
    }

    .form-group {
        margin-bottom: 20px;
    }

    .btn {
        font-size: 1rem;
    }
</style>

<div class="form-container">
    <form asp-action="UpdateSupplier">
        <input type="hidden" asp-for="SupplierId" />

        <div class="form-group">
            <label asp-for="SupplierName" class="control-label"></label>
            <input asp-for="SupplierName" class="form-control" />
            <span asp-validation-for="SupplierName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ContactInfo" class="control-label"></label>
            <input asp-for="ContactInfo" class="form-control" />
            <span asp-validation-for="ContactInfo" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-controller="Supplier" asp-action="GetAllSuppliers" class="btn btn-secondary">Back to List</a>
    </form>
</div>
