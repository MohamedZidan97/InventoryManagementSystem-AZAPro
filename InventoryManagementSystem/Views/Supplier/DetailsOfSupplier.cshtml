@model GetSupplierByIdResponse

@{
    ViewData["Title"] = "Supplier Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Supplier Details</h1>

<style>
    body {
        background-image: url('@Url.Content("~/Files/Images/inventorybackground.png")');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .card {
        margin: 50px auto;
        max-width: 600px;
        background-color: rgba(255, 255, 255, 0.9);
        border-radius: 8px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
    }

    .card-body {
        padding: 20px;
    }

    .card-title {
        font-size: 1.5rem;
        margin-bottom: 15px;
    }

    .card-text {
        font-size: 1.1rem;
        margin-bottom: 20px;
    }

    .btn {
        font-size: 1rem;
        margin-right: 10px;
    }
</style>

<div class="card mb-3">
    <div class="row g-0">
        <div class="col-md-12">
            <div class="card-body">
                <h5 class="card-title">@Model.SupplierName</h5>
                <p class="card-text"><strong>Contact Info:</strong> @Model.ContactInfo</p>

                <a asp-controller="Supplier" asp-action="UpdateSupplier" asp-route-id="@Model.SupplierId" class="btn btn-warning">Edit Supplier</a>
                <a asp-controller="Report" asp-action="GetReportHasProducts" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>
